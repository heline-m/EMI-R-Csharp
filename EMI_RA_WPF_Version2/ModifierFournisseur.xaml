        <TextBox HorizontalAlignment="Left" Margin="312,251,0,0"  Name="email" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="217" />

        <TextBlock HorizontalAlignment="Left" Height="18" Margin="194,183,0,0" Text="Civilité :" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="194,206,0,0" Text="Nom :" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="194,228,0,0" Text="Prenom :" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="194,251,0,0" Text="Email :" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>

        <StackPanel Margin="336,127,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Width="168">
            <RadioButton Content="Actif" Name="active" Width="74"/>
            <RadioButton Content="Desactif" Name="desactive"/>
        </StackPanel>

        <!--<Button Content="Valider" HorizontalAlignment="Center" Margin="0,326,0,0" VerticalAlignment="Top" Click="Button_Click"/>-->

    </Grid>
